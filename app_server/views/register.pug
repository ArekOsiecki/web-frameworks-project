extends layout

block content
  .main.container
  .row.banner
    .col-12.col-md-offset-2
              h1=pageHeader.title
              small &nbsp;#{pageHeader.strapline}
  .row
    .col-md-6.col-md-offset-3
            
              form(method='POST' action='/register')
              - if (error == "val")
              .alert.alert-danger(role="alert") All fields required, please try again
              div.form-group
              label(for='userName') Name:
              input#userName.form-control(type='text', placeholder='first and last' name='userName')
              div.form-group
              label(for='email') Email:
              input#email.form-control(type='email', placeholder='name@email.com' name='email')
              div.form-group
              label(for='book') Favorite Book:
              input#book.form-control(type='text', placeholder='title of book' name='book')
              div.form-group
              label(for='password') Password:
              input#password.form-control(type='password' name='password')
              div.form-group
              label(for='pw2') Confirm Password:
              input#pw2.form-control(type='password' name='confirmPassword')
              button.btn.btn-primary(type='submit') Sign up