extends layout

block content
  .main.container
  .row.banner
    .col-12.col-md-offset-2
              h1=pageHeader.title
              small &nbsp;#{pageHeader.strapline}
  .row
    .col-md-6.col-md-offset-3
              form(method='PUT' action='/search')
              - if (error == "val")
              .alert.alert-danger(role="alert") All fields required, please try again
              div.form-group
              label(for='from') From:
              input#locFrom.form-control(type='text', placeholder='starting point' name='from')
              div.form-group
              label(for='to') To:
              input#locTo.form-control(type='text', placeholder='destination' name='to')
              button.btn.btn-primary(type='submit') Search