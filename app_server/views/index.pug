extends layout

block content
  .main.container
  .row.banner
    .col-12.col-md-offset-2
              h1=pageHeader.title
              small &nbsp;#{pageHeader.strapline}
  .row
    .col-md-6.col-md-offset-3

              form(method='POST' action='/')
              - if (error == "val")
              .alert.alert-danger(role="alert") All fields required, please try again
              div.form-group
              label(for='email') Email
              input#email.form-control(type='text' id='email' placeholder='email' name='email')
              div.form-group
              label(for='password') Password
              input#password.form-control(type='password' id='password' placeholder='password' name='password')
              button.btn.btn-primary(type='submit') Log in 